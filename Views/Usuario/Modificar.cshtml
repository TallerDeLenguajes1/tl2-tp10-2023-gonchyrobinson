@model Usuario
<form asp-controller="Usuario" asp-action="ModificarP" method="post">
            <input hidden asp-for="@Model.Id">
            <div class="form-group">
                <label asp-for="@Model.Nombre_de_Usuario"></label>
                <input asp-for="@Model.Nombre_de_Usuario" class="form-control" required />
            </div>    
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-default" />
            </div>
</form>