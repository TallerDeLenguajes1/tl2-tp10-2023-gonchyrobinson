@model CrearTableroViewModel
@using tl2_tp10_2023_gonchyrobinson.ViewModel
    
<div class="">
        <h1 class="display-4 text-center">Crear tablero</h1>   </div>
<div>
<form asp-controller="Tablero" asp-action="CrearP" method="post">
    <input asp-for="@Model.Usuarios" hidden>
    <div class="form-group mb-3">
        <label for="nombre">Nombre del tablero</label>
        <input type="text" class="form-control" id="nombre" asp-for="@Model.Nombre">
        <span asp-validation-for="@Model.Nombre" class="mt-1 text-danger"></span>

    </div>
    <div class="form-group mb-3">
        <label for="us_prop">Usuario Propietario</label>
        <select class="form-control" id="us_prop" asp-for="@Model.Id_usuario_propietario">
                @foreach (var us in Model.Usuarios)
                {
                    <option value="@us.Id">@us.Nombre</option>
                }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="desc">Descripcion</label>
        <input type="text" class="form-control" id="desc" asp-for="@Model.Descripcion">
        <span asp-validation-for="@Model.Descripcion" class="mt-1 text-danger"></span>

    </div>
    <div class="btn-group d-flex my-4" role="group">
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>
</form>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}