@model List<Tablero>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col" hidden>Id</th>
            <th scope="col" hidden>Id Usuario Propietario</th>
            <th scope="col">Usuario Propietario</th>
            <th scope="col"> Nombre </th>
            <th scope="col"> Descripcion </th>
            <th></th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var tab in Model)
        {
            <tr>
                <td hidden>@tab.Id</td>
                <td hidden>@tab.Id_usuario_propietario</td>
                @{
                    var us = ViewBag.UsRepos.ObtenerDetalles(tab.Id_usuario_propietario);
                    string nombreUs = "";
                    if (us != null)
                    {
                        nombreUs = us.Nombre_de_Usuario;
                    }
                }
                <td>@nombreUs</td>
                <td>@tab.Nombre</td>
                <td>@tab.Descripcion</td>
                <td><a asp-asp-controller="Tablero" asp-action="Editar" asp-route-id="@tab.Id">Modificar</a></td>
                <td><a asp-asp-controller="Tablero" asp-action="Eliminar" asp-route-id="@tab.Id">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>